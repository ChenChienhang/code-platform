{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/user/check_email_unique": {
            "post": {
                "description": "获取验证码，发送验证码到邮箱，有效期15min",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户相关"
                ],
                "summary": "获取验证码",
                "parameters": [
                    {
                        "type": "string",
                        "description": "用户邮箱",
                        "name": "nick_name",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "执行结果",
                        "schema": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "/user/check_nickname_unique": {
            "post": {
                "description": "检查用户昵称的唯一性。",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户相关"
                ],
                "summary": "昵称唯一性检查",
                "parameters": [
                    {
                        "type": "string",
                        "description": "用户昵称",
                        "name": "nick_name",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "执行结果",
                        "schema": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "description": "登录，返回token。",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "快速CURD"
                ],
                "summary": "登录",
                "parameters": [
                    {
                        "type": "string",
                        "description": "用户名（邮箱）",
                        "name": "username",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "密码",
                        "name": "password",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "token",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/user/signup": {
            "post": {
                "description": "提交注册信息，注册用户。",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户相关"
                ],
                "summary": "注册",
                "parameters": [
                    {
                        "type": "string",
                        "description": "邮箱",
                        "name": "Email",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "昵称",
                        "name": "NickName",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "真实姓名",
                        "name": "RealName",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "学号/职工号",
                        "name": "Num",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "密码",
                        "name": "Password",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "专业",
                        "name": "query",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "单位",
                        "name": "Organization",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "执行结果",
                        "schema": {
                            "$ref": "#/definitions/response.JsonResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "response.JsonResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "错误码(0成功，其他错误)",
                    "type": "integer"
                },
                "data": {
                    "description": "返回数据(业务接口定义具体数据结构)",
                    "type": "object"
                },
                "message": {
                    "description": "提示信息",
                    "type": "string"
                }
            }
        }
    }
}